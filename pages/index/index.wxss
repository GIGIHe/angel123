.page__bd{
  width: 750rpx;
  background: #F2f2f2;
  box-sizing: border-box;
}
.ads{
  width: 750rpx;
  height: 60rpx;
  border: 1rpx solid #eee;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  box-sizing: border-box;
}
.notice{
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.ads .ads-text{
  display: inline-block;
  height: 40rpx;
  font-size: 18rpx;
  line-height: 40rpx;
  color: #f00;
  box-sizing: border-box;
}
swiper{
  flex: 1;
  height: 60rpx;
  box-sizing: border-box;
}
.category{
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 40rpx 0;
  box-sizing: border-box;
}
.category .cell{
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  
}
.cell .cate_text{
  font-size: 28rpx;
  }
.hover{
  border-bottom: 1rpx solid red;
}
.category .cell image{
  display:block;
  width: 40rpx;
  height: 40rpx;
}
.banner{
  width: 750rpx;
  height:250rpx;
  text-align: center;
  /* border: 1rpx solid red; */
}
.banner swiper{
  width: 100%;
  height: 100%;
}
swiper-item image {
  width: 750rpx;
  height:250rpx;
}

.re_wrap{
  width:750rpx;
  background: #eee;
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
}
.re_itm{
  display:flex;
  flex-direction: column;
  width: 340rpx;
  height: 460rpx;
  border-radius: 10rpx;
  background: #fff;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}
.re_itm image{
  display: block;
  width: 340rpx;
  height: 100%
}
.itm_tit{
width: 280rpx;
text-overflow: ellipsis;
white-space: nowrap;
overflow: hidden;
font-size: 24rpx;
padding: 24rpx 0 0rpx 10rpx;
color: #000;
margin-left: 24rpx;
line-height: 30px;
box-sizing: border-box;
}
.re_price{
  display: flex;

}
.spe_pri{
width: 280rpx;
overflow: hidden;
font-size: 24rpx;
padding: 24rpx 0;
color: #e64340;
margin-left: 24rpx;
box-sizing: border-box;
}
.old_pri{
width: 280rpx;
overflow: hidden;
font-size: 24rpx;
padding: 24rpx 0;
margin-left: 24rpx;
color: #aaa;
text-decoration: line-through;
box-sizing: border-box;
}
.pt{
  width: 750rpx;
  margin: 20rpx 0;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  color: #999;
}
.pt_wrap{
background: #F2f2f2;
padding-top: 10rpx;
width: 750rpx;
height:470rpx;
}
.pt_wrap .pt_img{
 width: 720rpx;
 height: 250rpx;
 margin: auto;
 overflow: hidden;
}
.pt_wrap .pt_img image{
  display: block;
  width: 720rpx;
}
.pt_txt{
  color: #000;
  font-size: 30rpx;
  padding: 10rpx;
  background: #fff;
  width: 750rpx;
  box-sizing: border-box;
}
.pt_desc{
  background: #fff;
  color: #999;
  font-size: 28rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 750rpx;
  box-sizing: border-box;
}
.btn{
  background: rgb(216, 22, 22);
  width: 200rpx;
  height: 50rpx;
  border-radius: 5rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
}
.pr_des{
  color: #f00;
  margin-right: 20rpx;
}
.pt_pri{
  text-decoration: line-through;
}
.goods_block{
  background: #fff;
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.goods_con{
  width: 750rpx;
  background: #F2f2f2;
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.goods_con .item{
  width: 340rpx;
  padding-top: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  margin-left:18rpx;
  margin-right: 17rpx;
  overflow: hidden;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.item_pic{
  width: 310rpx;
  height: 460rpx;
  overflow: hidden;
  margin: auto;
}
.item_pic image{
  width: 310rpx;
}
.link-hover{
  background: #F2f2f2;
}
.bot{
  background: #F2f2f2;
  text-align: center;
  font-size: 20rpx;
  color: #999;
  padding: 10rpx;
  box-sizing: border-box;
}