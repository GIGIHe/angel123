.order-create{
  background: #f2f2f2;
  height: 100vh;
}
.white{
  background: #fff;
}
.title{
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.row{
  display: flex;
  height: 200rpx;
  justify-content: space-between;
  padding: 20rpx 20rpx 10rpx 20rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #ddd;
}
.row image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 15rpx;
}
.row .name{
  font-size:30rpx;
  width: 400rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.row .num{
  width: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
  text-align: right;
}
.post-notice{
  margin: 10rpx auto;
}
.post{
 display: flex;
 padding: 20rpx;
 height: 120rpx;
 box-sizing: border-box;
 justify-content: space-between;
}
.mr{
  margin-right: 20rpx;
}
.notice{
  display: flex;
  height: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  border-top: 1rpx solid #ddd;
}
.notice text{
  width: 200rpx;
  line-height: 2;
}
.notice input{
  width: 500rpx;
  height: 100%;
  font-size: 24rpx;
}
.notice input ::placeholder{
  line-height: 2;
}
.order-bot{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: flex-end;
  height: 100rpx;
  line-height: 100rpx;
}
.order-bot .total{
  color: #e64340;
  text-align: center;
  font-size: 30rpx;
}
.order-bot .submit{
  width: 200rpx;
  color: #fff;
  background-color:#e64340 ;
  text-align: center;
  font-size: 34rpx;
  margin-left: 20rpx;
}