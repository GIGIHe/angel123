
.vacant{

}
.vacant image{
  display: block;
  width: 108rpx;
  height: 108rpx;
  margin:200rpx auto 20rpx;
}
.vacant .grey_text{
  color: #666;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 50rpx;
}
.vacant .look{
  background: #e64340;
  width: 300rpx;
  height:80rpx;
  font-size: 30rpx;
  line-height:80rpx;
  text-align: center;
  border-radius: 6px;
  color: #fff;
  margin: auto;
}
.title,
.presents{
  width: 750rpx;
  display: flex;
  padding: 20rpx;
  background: #f2f2f2;
  box-sizing: border-box;
}
.title{
  justify-content: space-between;
}
.title text:nth-child(1){
  font-size: 28rpx;
  color: #000;
  text-align: center
}
.title text:nth-child(2){
  font-size: 28rpx;
  color: #666;
  text-align: center
}
.presents{
  background: #fff;
  align-items: center;
}
.presents .left{
 width: 50rpx;
 height: 50rpx;
 margin-right: 30rpx;
}
.presents .left image{
 width: 50rpx;
 height: 50rpx;
}
.presents .pic{
width: 160rpx;
height: 160rpx;
margin-right: 20rpx;
}
.presents .pic image{
width: 160rpx;
height: 160rpx;
}
.right{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
}
.right .r_top{
 font-size: 28rpx;
 color: #000;
 text-align: left;
 /* white-space:nowrap;  */
 text-overflow: ellipsis;
-webkit-line-clamp: 2;/*为行数*/
-webkit-box-orient: vertical;
}
.right .r_bot{
 display: flex;
 justify-content: space-between;
}
.right .r_bot .price{
color: #e64340;
}
.right .r_bot .compute{
color: #999;
display: flex;
width: 200rpx;
text-align: center;
}
.right .r_bot text{
  flex: 1;
  height: 60rpx;
  border: 1px solid #999;
}
.right .r_bot .num{
  width: 90rpx;
  height: 62rpx;
  font-size: 26rpx;
  line-height: 62rpx;
  border: none;
  border-top: 1rpx solid #999;
  border-bottom: 1rpx solid #999;
}
.disabled{
  background: #eee;
}
.bt_wrap{
  display: flex;
  align-items: center;
  width: 750rpx;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  background:#fff;
}
.bt_wrap .icon{
  width: 160rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.bt_wrap image{
   width: 50rpx;
   height: 50rpx;
}
.bt_wrap .icon text{
  font-size: 28rpx;
  color: #000;
}
.bt_wrap .hj{
  flex: 1;
  font-size: 26rpx;
  color: #e64340;
  text-align: center;
}
.bt_wrap .oper{
  width: 240rpx;
  font-size: 30rpx;
  color: #fff;
  background:#e64340;
  text-align: center;
}
.bt_wrap .oper view{
  width: 100%;
  height: 100%;
}